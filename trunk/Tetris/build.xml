<!-- 
This is the ant build file for tetris4j.
It's used to compile the project.
You will need Apache Ant to run this file.
-->

<project name="tetris4j" default="compile">

	<target name="compile">
		<!-- compile the code -->
		<javac srcdir="./code" destdir="./build" />

		<!-- copy the resources -->
		<copy todir="./build/image">
			<fileset dir="./image"/>
		</copy>
		<copy todir="./build/sound">
			<fileset dir="./sound"/>
		</copy>

	</target>

	<target name="clean">
		<delete dir="./build"/>
		<mkdir dir="./build"/>
	</target>




</project>
